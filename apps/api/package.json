{
  "name": "@usa/api",
  "version": "0.1.0",
  "repository": "https://github.com/cardo-usa/usa.git",
  "author": "dino3616 <85730998+dino3616@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "module": "nodenext",
  "scripts": {
    "generate": "prisma generate --schema ./src/infra/prisma/schema.prisma",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "dev": "cross-env NODE_ENV=development nest start --watch",
    "debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start": "cross-env NODE_ENV=production nest start",
    "start:dev": "cross-env NODE_ENV=development nest start",
    "prod": "cross-env NODE_ENV=production node dist/main",
    "prod:dev": "cross-env NODE_ENV=development node dist/main",
    "lint": "eslint './**/{*.*js,*.*ts}'",
    "lint:fix": "eslint './**/{*.*js,*.*ts}' --fix",
    "fmt": "prettier --check .",
    "fmt:fix": "prettier --write .",
    "test": "cross-env NODE_ENV=test jest --silent=false --verbose false --passWithNoTests",
    "prisma:gen": "prisma generate --schema ./src/infra/prisma/schema.prisma",
    "prisma:seed:dev": "dotenv -e .env.development -- cross-env NODE_ENV=development ts-node ./src/infra/prisma/seed/main.seed.ts",
    "prisma:studio:dev": "dotenv -e .env.development -- cross-env NODE_ENV=development prisma studio --schema ./src/infra/prisma/schema.prisma",
    "prisma:studio:prod": "dotenv -e .env.production -- cross-env NODE_ENV=production prisma studio --schema ./src/infra/prisma/schema.prisma",
    "apollo:rover": "rover graph publish usa@current --schema ./schema.gql"
  },
  "dependencies": {
    "@apollo/server": "4.9.1",
    "@nestjs/apollo": "12.0.7",
    "@nestjs/cli": "10.1.12",
    "@nestjs/common": "10.1.3",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.1.3",
    "@nestjs/graphql": "12.0.8",
    "@nestjs/platform-express": "10.1.3",
    "@nestjs/testing": "10.1.3",
    "@prisma/client": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dataloader": "2.2.2",
    "dotenv": "16.3.1",
    "graphql-subscriptions": "2.0.0",
    "graphql-validation-complexity": "0.4.2",
    "ts-pattern": "5.0.5",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@apollo/rover": "0.18.0",
    "@nestjs/schematics": "10.0.2",
    "@types/graphql-validation-complexity": "0.4.0",
    "@usa/jest": "workspace:*",
    "@usa/postcss": "workspace:*",
    "@usa/prettier": "workspace:*",
    "@usa/stylelint": "workspace:*",
    "@usa/tsconfig": "workspace:*",
    "@usa/type": "workspace:*",
    "eslint-config-usa-node": "workspace:*",
    "prisma": "5.1.1"
  }
}
